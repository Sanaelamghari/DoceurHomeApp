<resources>
    <style name="TopRightRoundedCard" parent="CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="android:topRightRadius">20dp</item> <!-- Ajustez la valeur -->
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="OverlayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>
    <style name="BottomNavTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@drawable/nav_color_selector</item>
        <item name="itemTextColor">@drawable/nav_color_selector</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>
</resources>