<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom et Prénom"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etBillingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse de facturation"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etShippingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Adresse de livraison (si différente)"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numéro de téléphone"
            android:inputType="phone"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Méthode de paiement"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbCashOnDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paiement à la livraison"
                android:checked="true"/>

        </RadioGroup>

        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmer le paiement"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>

