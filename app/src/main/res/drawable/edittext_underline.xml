<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ligne du bas -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#BDBDBD"/> <!-- Couleur de la ligne par dÃ©faut -->
        </shape>
    </item>

    <!-- Ligne du bas (active) -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#6200EE"/> <!-- Couleur d'accentuation quand actif -->
        </shape>
    </item>
</layer-list>