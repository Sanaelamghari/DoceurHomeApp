<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État actif (focused) -->
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="#6200EE"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- État normal -->
    <item>
        <layer-list>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#BDBDBD"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>